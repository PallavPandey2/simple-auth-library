{
    "compilerOptions": {
        "target": "ES6",
        "module": "ESNext",
        "moduleResolution": "node",
        "declaration": true,
        "outDir": "./lib",
        "strict": false,
        "sourceMap": true,
        "strictNullChecks": false,
        "noUnusedLocals": false,
        "experimentalDecorators": true,
        "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*"]
}